<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">

    <link rel="icon" type="image/jpeg" href="~/images/A.png">
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/shared.js" asp-append-version="true"></script>
    <script src="~/js/about.js" asp-append-version="true"></script>
    <link href="~/content/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/content/about.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/content/projects.css" rel="stylesheet" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/a07c50e8cd.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://platform.linkedin.com/badges/js/profile.js" async defer></script>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/"> 
                <img class="logo" src="~/images/A.png" alt="running man logo for mrsagile" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item" onclick="setActiveClassFunc()">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            Home
                           @* <span class="sr-only">(current)</span>*@
                        </a>
                    </li>
                    <li  class="nav-item">
                        <a class="nav-link" asp-controller="About" asp-action="Summary"  onclick="setActiveClassFunc()">About me</a>                    
                    <li class="nav-item">
                        <a class="nav-link" href="/Projects"  onclick="setActiveClassFunc()">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"  onclick="setActiveClassFunc()">Training</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"  onclick="setActiveClassFunc()">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <div>
        @RenderBody()
    </div>
</body>
</html>
